<%- include('header.ejs') %>
    <div class="box" id="heading">
        <h1 style="color: black"><%= listTitle %> </h1>
    </div>

    <div class="box">
 
            <% for (const item of items) {%>
            <div class="item">
                <input type="checkbox">
                <p><%= item %> </p>
            </div>
            <% } %>
            <form action="/" method="post" class="item">
                <input type="text" name="nextItem" placeholder="Next item" autocomplete="off">
                <button type="submit" name="list" value=<%= listTitle %>>+</button>
            </form>
    </div>
    <%- include('footer.ejs') %>